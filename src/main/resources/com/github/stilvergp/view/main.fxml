<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="515.0" prefWidth="604.0" spacing="20.0" stylesheets="@css/main.css"
      xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/"
      fx:controller="com.github.stilvergp.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="CENTER" prefHeight="7.0" prefWidth="564.0">
        <Label text="Huellas registradas">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
        <HBox alignment="CENTER_LEFT" prefHeight="28.0" prefWidth="285.0">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <Label prefHeight="17.0" prefWidth="110.0" text="Buscar productos:"/>
            <TextField fx:id="searchBox" prefHeight="25.0" prefWidth="173.0" promptText="Buscar productos"/>
        </HBox>
        <Button mnemonicParsing="false" onAction="#myHabits" prefHeight="25.0" prefWidth="111.0" text="Mis habitos"/>
    </HBox>
    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="activityColumn" prefWidth="75.0" text="Actividad realizada"/>
            <TableColumn fx:id="valueColumn" prefWidth="75.0" text="Cantidad de consumo"/>
            <TableColumn fx:id="unitColumn" prefWidth="75.0" text="Unidad de consumo"/>
            <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Fecha de realizaciÃ³n"/>
            <TableColumn fx:id="footprintImpactColumn" prefWidth="75.0" text="Impacto ambiental"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox alignment="CENTER" prefHeight="0.0" prefWidth="564.0">
        <Button mnemonicParsing="false" onAction="#addFootprint" text="Registrar huella">
            <HBox.margin>
                <Insets right="150.0"/>
            </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#removeFootprint" text="Eliminar"/>
    </HBox>
</VBox>
